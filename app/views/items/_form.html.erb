<%= form_with(model: item, local: true) do |form| %>

  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Lendr: Update custom form text field Name %>
  <div class="field">
    <%= form.label :item_name %>
    <%= form.text_field :name %>
  </div>

   <%# Lendr: Create a new custom form collection field Category, add dropdown menu. %>
  <div class="field">
    <%= form.label :category %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name, include_blank: false, prompt: "Select a category" %>
  </div>

  <%# Lendr: Add custom form file field for Image %>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <%# Lendr: Add custom form text area field for Description %>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <%# Lendr: Add custom form text area field for Terms and Conditions %>
  <div class="field">
    <%= form.label :terms_and_conditions %>
    <%= form.text_area :terms %>
  </div>

  <%# Lendr: Add formatting to display form text field for Price correctly %>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, value: number_with_precision((item.price||0)/100.0, :precision => 2) %>
  </div>


  <div class="field">
    <%= form.label :street %>
    <%= form.text_field :street %>
  </div>

  <div class="field">
    <%= form.label :suburb %>
    <%= form.text_field :suburb %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
