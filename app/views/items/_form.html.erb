<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# Lendr: Update custom field Name %>
  <div class="field">
    <%= form.label :item_name %>
    <%= form.text_field :name %>
  </div>

  <%# Lendr: Add custom field for Image %>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <%# Lendr: Add custom field for Terms and Conditions %>
  <div class="field">
    <%= form.label :terms_and_conditions %>
    <%= form.text_area :terms %>
  </div>

  <%# Lendr: Add formatting to display Price field correctly %>
  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, value: number_with_precision((item.price||0)/100.0, :precision => 2) %>
  </div>

  <%# Lendr: Remove custom Pickup Time field as no longer required %>
  <div class="field">
    <%= form.label :pickup_time %>
    <%= form.time_select :pickup_time %>
  </div>

  <div class="field">
    <%= form.label :street %>
    <%= form.text_field :street %>
  </div>

  <div class="field">
    <%= form.label :suburb %>
    <%= form.text_field :suburb %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :postcode %>
    <%= form.text_field :postcode %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
