<h1>Categories#index</h1>
<br />

<%= form_tag("/items", method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<% @categories.each do |category| %>
    <div>
        <h3><%= link_to category.name, category %></h3>
    </div>
<% end %>