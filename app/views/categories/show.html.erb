<h1>Categories#show</h1>

<p>
  <strong>Category:</strong>
  <%= @category.name %>
</p>

<%= form_tag("/items", method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Terms</th>
      <th>Price</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Availability</th>
      <th>Next Availabile</th>
      <th>Preview</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.terms %></td>
        <td><%= number_to_currency(item.price/100.0) %></td>
        <td><%= item.suburb %></td>
        <td><%= item.state %></td>
        <td>
          <% if item.next_available < Time.now %>
            <strong>AVAILABLE!</strong>
            <% else %>
            <strong>UNAVAILABLE!</strong>
          <% end %>
        </td>
        <td><%= item.next_available.strftime('%a, %e %b %Y') %></td>
        <td><%= image_tag item.images.first, height: '80'%></td> 

        <td><%= link_to 'Show', item %></td>
        <% if item.user == current_user %>  
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
